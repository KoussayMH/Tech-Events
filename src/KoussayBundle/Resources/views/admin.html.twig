{% extends "@Back/base.html.twig" %}

    {% block container %}

<!-- partial:../../partials/_sidebar.html -->

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                La liste des évènements
            </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Tables</a></li>
                    <li class="breadcrumb-item active" aria-current="page">La liste des évènements</li>
                </ol>
            </nav>
        </div>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">La liste des évènements</h4>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Image1</th>
                                    <th>etat</th>

                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Lieu</th>
                                    <th>Actions</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for event in event %}

                                    <tr>
                                        <td>{{ event.titre }}</td>
                                        <td>{{ event.image1 }}</td>
                                        <td>{{ event.etat }}</td>

                                        <td>{% if event.date %}{{ event.date|date('Y-m-d') }}{% endif %}</td>
                                        <td>{{ event.description }}</td>
                                        <td>{{ event.lieu }}</td>
                                        {% if event.etat == 'enAttente' %}
                                        <td>
                                            <label class="badge badge-info" onclick="window.location.href ='{{ path('UpdateDemandes',{'id': event.id}) }}';">Accepter</label>
                                        </td>
                                        {% elseif event.etat=='Accepte' %}
                                                <td>
                                                    <label class="badge badge-info" onclick="window.location.href ='#';">Valider</label>
                                                </td>
                                        {% endif %}
                                        <td>
                                            <button class="btn btn-outline-primary" onclick="window.location.href ='{{ path('deleteA',{'id': event.id}) }}';">Supprimer</button>
                                        </td>
                                        <td>
                                            <label class="badge badge-info" onclick="window.location.href ='{{ path('afficherCommentaire',{'id': event.id}) }}';">comments</label>
                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->

    <script src="{{ asset ('back/js/data-table.js') }}"></script>

    {% endblock %}


