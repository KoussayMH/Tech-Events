{% extends '@Front/layout.html.twig' %}

{% block container %}
    <!--Start breadcrumb area-->
    <section class="breadcrumb-area" style="background-image: url({{ asset('front/images/resources/breadcrumb-bg.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumbs">
                        <h1>La Liste des evenements </h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--End breadcrumb area-->

{% for event in events %}

    <!--Start blog area-->
    <section id="blog-area" class="blog-large-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="blog-post">
                        <!--Start single blog item-->
                        <div class="single-blog-item">
                            <div class="img-holder">
                                <img src="{{ asset(event.image1) }}" alt="Awesome Image">
                                <div class="overlay-style-one">
                                    <div class="box">
                                        <div class="content">
                                            <a href="blog-single.html"><i class="fa fa-link" aria-hidden="true"></i></a>
                                        </div>
                                    </div>
                                </div>

                                <div class="post-date">
                                    <h3> {{  event.date|date('d')}} <br>{{  event.date|date('m')}}</h3>
                                </div>
                            </div>
                            <div class="text-holder">
                                <ul class="meta-info">
                                    <li><a href="https://www.facebook.com/events/1161286374032375/"><i class="fa fa-folder-open" aria-hidden="true"></i>Social, Media</a></li>
                                    <li><a href="{{ path('event_show', { 'id': event.id }) }}"><i class="fa fa-comments" aria-hidden="true"></i>24 Comments</a></li>
                                </ul>
                                <a href="blog-single.html">
                                    <h3 class="blog-title">{{ event.titre }}</h3>
                                </a>
                                <div class="text">
                                    <p>{{ event.description }}</p>
                                    <a class="read-more" href="{{ path('event_show', { 'id': event.id }) }}"> Read More</a>
                                </div>
                            </div>
                        </div>
                        <!--End single blog item-->

    </div>
                </div>
{% endfor %}

    <!--Start sidebar Wrapper-->
                <div class="col-lg-4 col-md-6 col-sm-7 col-xs-12">
                    <div class="sidebar-wrapper">

                        <!--Start single sidebar-->
                        <div class="single-sidebar wow fadeInUp" data-wow-delay="0s" data-wow-duration="1s" data-wow-offset="0">
                            <div class="sec-title">
                                <h3>Facebook Feed</h3>
                            </div>
                            <div class="fb-feed-content">
                                <img src="images/sidebar/fb-feed.jpg" alt="Awesome Image">

                            </div>
                        </div>

                        <!--End single sidebar-->
                    </div>
                </div>
                <!--End Sidebar Wrapper-->
            </div>
        </div>
    </section>
    <!--End blog area-->

    <ul>
        <li>
            <a href="{{ path('event_new') }}">Create a new event</a>
        </li>
    </ul>
{% endblock %}
