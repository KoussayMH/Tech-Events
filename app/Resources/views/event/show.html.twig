{% extends '@Front/layout.html.twig' %}

{% block container %}
    <!--Start breadcrumb area-->
    <section class="breadcrumb-area" style="background-image: url({{ asset('front/images/resources/breadcrumb-bg.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumbs">
                        <h1>Single event </h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--End breadcrumb area-->

    <!--Start blog area-->

    <section id="blog-area" class="blog-single-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="blog-post">
                        <div class="single-blog-item">
                            <div class="img-holder">

                                <img src="{{ asset(event.image1) }}" alt="Awesome ">


                                <div class="post-date">
                                    <h3> {{  event.date|date('d')}} <br>{{  event.date|date('m')}}</h3>
                                </div>
                            </div>
                            <div class="text-holder">
                                <ul class="meta-info">
                                    <li><a href="#"><i class="fa fa-user" aria-hidden="true"></i>By Stephen Neil</a></li>
                                    <li><a href="#"><i class="fa fa-folder-open" aria-hidden="true"></i>Social, Media</a></li>
                                    <li><a href="#"><i class="fa fa-comments" aria-hidden="true"></i>24 Comments</a></li>
                                </ul>
                                <h3 class="blog-title">{{ event.titre }}</h3>
                                <div class="text">
                                    <p class="mar-btm"> {{ event.description }}</p>
                                </div>
                            </div>
                        </div>

                        <!--Start tag and social share box-->
                        <div class="tag-social-share-box clearfix">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="social-share">
                                        <h5>Share<i class="fa fa-share-alt" aria-hidden="true"></i></h5>
                                        <ul class="social-share-links">
                                            <li><a href="https://www.facebook.com"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                            <li><a href="https://www.facebook.com"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                            <li><a href="https://www.linkedin.com/feed/"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                                            <li><a href="https://www.linkedin.com/feed/"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End tag and social share box-->

                        <!--Start comment box-->
                        <div class="comment-box">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="sec-title pdb-30">
                                        <h2>Read Comments</h2>
                                        <span class="border"></span>
                                    </div>
                                    {% for comment in comments %}

                                    <!--Start single comment box-->
                                        <div class="single-comment-box">
                                        <div class="img-holder">
                                            <img src="images/blog/comment-2.jpg" alt="taswiret user ">
                                        </div>
                                        <div class="text-holder">
                                            <div class="top">
                                                <div class="name pull-left">
                                                    <h5>user </h5>
                                                </div>
                                                <div class="review-box pull-right">
                                                    <ul>
                                                        <li>{{ comment.date|date('Y-m-d') }}</i></li>

                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="text">
                                                <p>{{ comment.description }}.</p>
                                            </div>
                                            <div class="img-box"> <img src="{{ asset('/front/images/team/' ~ event.image1) }}" width="60" height="40"> </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    <li><a href="#"><i class="fa fa-comments">Read more</i></a></li>

                                    <!--End single comment box-->
                                </div>
                            </div>
                        </div>
                        <!--End comment box-->
                    </div>
                </div>


                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="blog-post">

                        <!--Start add comment box-->
                        <div class="add-comment-box">
                            <div class="sec-title pdb-30">
                                <h2>Ajouter un commentaire</h2>
                                <span class="border"></span>
                            </div>
                            <form id="add-comment-form" name="comment-form" action="#" method="post">
                                {{ form_start(form_Commetaire) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="field-label">User </div>
                                                {{ form_widget(form_Commetaire.description , {'attr':{'class':'form-control' }} )  }}

                                            </div>


                                        </div>


                                        <div class="row">
                                            <div class="col-md-12">
                                                <input type="submit" class="btn btn-primary mr-2" value="Create" />
                                                {{ form_end(form_Commetaire) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                        <!--End add comment box-->
                    </div>
                </div>




                <!--Start sidebar Wrapper-->
                <div class="col-lg-4 col-md-6 col-sm-7 col-xs-12">
