{% extends '@Front/layout.html.twig' %}

{% block container %}
    <!--Start breadcrumb area-->
    <section class="breadcrumb-area" style="background-image: url({{ asset('front/images/resources/breadcrumb-bg.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumbs">
                        <h1>La Liste des evenements </h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--End breadcrumb area-->



    <section id="blog-area" class="blog-single-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="blog-post">

                        <!--Start add comment box-->
                        <div class="add-comment-box">
                            <div class="sec-title pdb-30">
                                <h2>Ajouter un evenement</h2>
                                <span class="border"></span>
                            </div>
                                    {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="field-label">Titre*</div>
                                                {{ form_widget(form.titre , {'attr':{'class':'form-control' }} )  }}

                                            </div>
                                            <div class="col-md-6">
                                                <div class="field-label">date*</div>
                                                {{ form_widget(form.date )  }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="field-label">lieu*</div>
                                                {{ form_widget(form.lieu , {'attr':{'class':'form-control' }} )  }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="field-label">Description</div>
                                                {{ form_widget(form.description , {'attr':{'class':'form-control' }} )  }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="field-label">Image</div>
                                                {{ form_widget(form.image1 , {'attr':{'class':'form-control' }} )  }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_widget(form.submit ,{'attr':{'class':'btn btn-primary mr-2'}}) }}
                                                {{ form_end(form) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                        <!--End add comment box-->
                    </div>
                </div>
                <!--Start sidebar Wrapper-->
                <div class="col-lg-4 col-md-6 col-sm-7 col-xs-12">
                    <div class="sidebar-wrapper">

                        <!--Start single sidebar-->
                        <div class="single-sidebar wow fadeInUp" data-wow-delay="0s" data-wow-duration="1s" data-wow-offset="0">
